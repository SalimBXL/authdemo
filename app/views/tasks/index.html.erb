<% content_for :title, "Tasks" %>

<h1><i class="fa fa-tasks"></i> Tasks</h1>

<p></p><%= link_to '<i class="fa fa-plus"></i> New task'.html_safe, new_task_path, class: "w3-button" %></p>

<div class="w3-marging w3-padding w3-card-4 w3-light-grey w3-round">
  <table id="tasks" class="w3-table-all w3-hoverable">
    <thead>
      <tr class="w3-light-grey">
        <th>Title</th>
        <th>Project</th>
        <th>Description</th>
        <th>User</th>
        <th>Due date</th>
        <th>Criticity</th>
        <th>Level</th>
        <th>Status</th>
        <th>Priority</th>
        <th>Days</th>
        <th>Overdue</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <% @tasks.each do |task| %>
      <%= render task %>
    <% end %>
  </table>
</div>

<p></p><%= link_to '<i class="fa fa-plus"></i> New task'.html_safe, new_task_path, class: "w3-button" %></p>

<% content_for :title, "Tasks" %>

<h1><i class="fa fa-tasks"></i> Tasks</h1>

<table id="tasks" class="w3-table-all">
  <thead>
    <tr class="w3-light-grey">
      <th>Title</th>
      <th>Project</th>
      <th>Description</th>
      <th>User</th>
      <th>Due date</th>
      <th>Criticity</th>
      <th>Level</th>
      <th>Status</th>
      <th>Priority</th>
      <th>Days</th>
      <th>Overdue</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <% @tasks.each do |task| %>
    <%= render task %>
  <% end %>
</table>

<%= link_to "New task", new_task_path %>

<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>
      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :remarks %>
    <%= form.text_field :remarks %>
  </div>

  <div class="field">
    <%= form.label :start_date %>
    <%= form.date_field :start_date %>
  </div>

  <div class="field">
    <%= form.label :due_date %>
    <%= form.date_field :due_date %>
  </div>

  <div class="field">
    <%= form.label :project_id, "Project" %>
    <%= form.collection_select :project_id, Project.all, :id, :name, prompt: "Select a project" %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, Task.statuses.keys.map { |status| [status.humanize, status] }, prompt: "Select a status" %>
  </div>
  
  <div class="field">
    <%= form.label :user_id, "User" %>
    <%= form.collection_select :user_id, User.all, :id, :full_name, prompt: "Select a user" %>
  </div>

  <div class="field">
    <%= form.label :criticity %>
    <%= form.number_field :criticity, in: 0..10, step: 1 %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

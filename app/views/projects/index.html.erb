<h1>Projects</h1>


<p><%= link_to 'New Project', new_project_path, class: 'btn btn-primary' %></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Project Name</th>
            <th>Description</th>
            <th>Owner</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @projects.each do |project| %>
            <tr>
                <td><%= project.name %></td>
                <td><%= project.description %></td>
                <td><%= project.user.full_name %></td>
                <td><%= link_to "Show", project %></td>
                <td><%= link_to "Edit", edit_project_path(project) %></td>
                <td><%= link_to "Destroy", project, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<p><%= link_to 'New Project', new_project_path, class: 'btn btn-primary' %></p>
<% content_for :title, "Projects" %>

<h1><i class="fa fa-envelope"></i> Projects</h1>

<p><%= link_to '<i class="fa fa-plus"></i> New project'.html_safe, new_project_path, class: "w3-button" %></p>

<table id="projects" class="w3-table-all w3-card-4">
  <thead>
    <tr class="w3-light-grey">
      <th>Name</th>
      <th>Description</th>
      <th>User</th>
      <th>Tasks</th>
      <th colspan="3">Actions</th>
    </tr>
  <thead>
  <% @projects.each do |project| %>
    <%= render project %>
  <% end %>
</table>
<p><%= link_to '<i class="fa fa-plus"></i> New project'.html_safe, new_project_path, class: "w3-button" %></p>
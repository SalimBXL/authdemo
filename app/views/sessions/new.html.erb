<p><br></p>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-sm-12">
      <h1>Connexion</h1>
      <%= form_with url: session_path, local: true do |form| %>
        <div class="mb-3">
          <%= form.label :email_address, "Adresse e-mail", class: "form-label" %>
          <%= form.text_field :email_address, class: "form-control", placeholder: "Entrez votre e-mail" %>
        </div>
        <div class="mb-3">
          <%= form.label :password, "Mot de passe", class: "form-label" %>
          <%= form.password_field :password, class: "form-control", placeholder: "Entrez votre mot de passe" %>
        </div>
        <%= form.submit "Se connecter", class: "btn btn-primary w-100" %>
      <% end %>
    </div>
  </div>
</div>
